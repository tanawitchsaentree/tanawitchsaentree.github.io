            "priority": "high",
            "signals": {
                "behavior": [
                    "fast_scroll",
                    "experience_section_focus",
                    "contact_immediate"
                ],
                "keywords": [
                    "hiring",
                    "position",
                    "team",
                    "role",
                    "opportunity",
                    "candidate"
