                    "min": 0,
                    "max": 60
                },
                "interaction_pattern": "passive"
            },
            "confidence_threshold": 0.4,
            "response_strategy": {
                "greeting_tone": "friendly",
                "message_length": "short",
                "focus_areas": [
                    "highlights",
                    "quick_tour"
                ],
                "call_to_action": "surprise_me"
            }
        }
    },
    "device_context": {
        "mobile": {
            "screen_width": {
                "max": 768
            },
            "adaptations": {
                "message_style": "concise",
                "suggest_count": 2,
                "typing_speed_ms": 15,
                "follow_up_delay_multiplier": 0.8
            }
        },
        "tablet": {
            "screen_width": {
                "min": 769,
                "max": 1024
            },
            "adaptations": {
                "message_style": "moderate",
                "suggest_count": 3,
                "typing_speed_ms": 18,
                "follow_up_delay_multiplier": 0.9
            }
        },
        "desktop": {
            "screen_width": {
                "min": 1025
            },
            "adaptations": {
                "message_style": "detailed",
                "suggest_count": 3,
                "typing_speed_ms": 20,
                "follow_up_delay_multiplier": 1.0
            }
        }
    },
    "time_context": {
        "working_hours": {
            "days": [
                "mon",
                "tue",
                "wed",
                "thu",
                "fri"
            ],
            "hours": [
                9,
                17
            ],
            "implication": "professional_browsing",
            "tone_shift": "professional"
        },
        "after_hours": {
            "days": [
                "mon",
                "tue",
                "wed",
                "thu",
                "fri"
            ],
            "hours": [
                18,
                8
            ],
            "implication": "personal_interest",
            "tone_shift": "casual"
        },
        "weekend": {
            "days": [
                "sat",
                "sun"
            ],
            "implication": "leisure_browsing",
            "tone_shift": "friendly",
            "easter_egg": "Weekend vibes! üéØ"
        },
        "late_night": {
            "hours": [
                23,
                4
            ],
            "implication": "dedicated_research",
            "tone_shift": "casual",
            "easter_egg": "Late night browsing? ‚òï"
        }
    },
    "interaction_patterns": {
        "speed_reader": {
            "triggers": {
                "scroll_speed": "fast",
                "time_per_section": {
                    "max": 5
                }
            },
            "response": "Speed reader detected üëÄ Want the TL;DR?",
            "adapt_message": "short"
        },
        "deep_diver": {
            "triggers": {
                "scroll_speed": "slow",
                "time_per_section": {
                    "min": 15
                },
                "multiple_sections_visited": true
            },
            "response": "I see you're thorough üîç Want me to go deep on any particular area?",
            "adapt_message": "detailed"
        },
        "returner": {
            "triggers": {
                "visit_count": {
                    "min": 2
                }
            },
            "response": "Welcome back! Ready to pick up where we left off?",
            "remember_context": true
        }
    },
    "sentiment_detection": {
        "enthusiastic": {
            "keywords": [
                "amazing",
                "love",
                "wow",
                "awesome",
                "great",
                "excellent"
            ],
            "response_tone": "match_energy",
