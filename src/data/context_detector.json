        "professional": {
            "keywords": [
                "review",
                "evaluate",
                "consider",
                "assess",
                "requirements"
            ],
            "response_tone": "professional",
            "emoji_level": "low"
        },
        "casual": {
            "keywords": [
                "hey",
                "cool",
                "nice",
                "yeah",
                "sure"
            ],
            "response_tone": "friendly",
            "emoji_level": "medium"
        },
        "confused": {
            "keywords": [
                "what",
                "how",
                "unclear",
                "don't understand",
                "?"
            ],
            "response_tone": "clarifying",
            "emoji_level": "low",
            "offer_help": true
        }
    },
    "surprise_triggers": {
        "easter_egg_unlocked": {
            "condition": "specific_keyword",
            "keywords": [
                "secret",
                "easter egg",
                "hidden"
            ],
            "response": "You found it! üéâ Fun fact: Nate studied photography before UX. Visual storytelling is in his DNA."
        },
        "curiosity_rewarded": {
            "condition": "deep_exploration",
            "trigger": {
                "sections_visited": 4,
                "questions_asked": 3
            },
            "response": "You're really diving deep! Here's something cool: Nate's mutual fund app won an award for customer experience in Asia üèÜ"
